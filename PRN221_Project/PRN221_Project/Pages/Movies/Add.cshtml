@model PRN221_Project.Pages.Movies.AddModel
@{
}
<h1>Add Movie</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.MovieName" class="control-label"></label>
                <input asp-for="Movie.MovieName" class="form-control" />
                <span asp-validation-for="Movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CateId" class="control-label"></label>
                <select asp-for="Movie.CateId" class="form-control" asp-items="ViewBag.CateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Time" class="control-label"></label>
                <input asp-for="Movie.Time" class="form-control" />
                <span asp-validation-for="Movie.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Description" class="control-label"></label>
                <input asp-for="Movie.Description" class="form-control" />
                <span asp-validation-for="Movie.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Cost" class="control-label"></label>
                <input asp-for="Movie.Cost" class="form-control" />
                <span asp-validation-for="Movie.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Quantity" class="control-label"></label>
                <input asp-for="Movie.Quantity" class="form-control" />
                <span asp-validation-for="Movie.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

